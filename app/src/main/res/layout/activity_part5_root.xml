<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".part5.Part5RootActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/txt_size_16sp"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:id="@+id/tv_frame_animation1"
                android:text="XML 帧动画"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/txt_size_16sp"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:id="@+id/tv_frame_animation2"
                android:text="JAVA 帧动画"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/txt_size_16sp"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:id="@+id/tv_view_animation1"
                android:text="View 动画"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/txt_size_16sp"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:id="@+id/tv_object_animation1"
                android:text="属性动画"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>